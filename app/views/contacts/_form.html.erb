<!--fomrs to show the form on the edit and add ne contact pages-->
<%= form_with(model: contact) do |form| %>
  <% if contact.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :number, style: "display: block" %>
    <%= form.text_field :number %>
  </div>
  <!--form for user id to track a contact for add to an account-->
  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.number_field :user_id, id: :contact_user_id, value: current_user.id ,type: :hidden %>
  </div>
<br>
  <div>
    <%= form.submit class: "btn btn-dark" %>
  </div>
<% end %>
