<!--forms for editing and adding task to the to do list-->
<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :task, style: "display: block" %>
    <%= form.text_field :task %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :timeframe, style: "display: block" %>
    <%= form.text_field :timeframe %>
  </div>
  <!--form for user id to track a todo for add to an account-->
  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.number_field :user_id, id: :todo_user_id, value: current_user.id ,type: :hidden %>
  </div>
<br>
  <div>
    <%= form.submit class: "btn btn-dark" %>
  </div>
<% end %>
