<p style="color: green"><%= notice %></p>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
  <tr>

    <th>Task</th>
    <th>Description</th>
    <th>Timeframe</th>
    <th></th>



  </tr>
  </thead>
  <tbody>
  <% @todos.each do |todo| %>

    <tr>
      <td><%= todo.task %></td>
      <td><%= todo.description %></td>
      <td><%= todo.timeframe %></td>

      </td>

      <td>
        <%= link_to "Show this task", todo, class:"btn btn-dark"  %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to "New todo", new_todo_path, class:"btn btn-dark" %>