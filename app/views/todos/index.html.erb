<p style="color: green"><%= notice %></p>
<!--table to display task in to do list-->
<table class="table table-striped table-bordered">
<!--  table header-->
  <thead class="table-dark">
  <tr>
<!--    table header column headers-->
    <th>Task</th>
    <th>Description</th>
    <th>Timeframe</th>
    <th>User ID</th>
    <th></th>



  </tr>
  </thead>
  <tbody>
  <% @todos.each do |todo| %>

    <tr>
<!--      renders from the database the tasks details-->
      <td><%= todo.task %></td>
      <td><%= todo.description %></td>
      <td><%= todo.timeframe %></td>
      <td><%= todo.user_id %></td>
      </td>

      <td>
<!--        link button to go to task page-->
        <%= link_to "Show this task", todo, class:"btn btn-dark"  %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<!--button to go to new task-->
<%= link_to "New Task", new_todo_path, class:"btn btn-dark" %>